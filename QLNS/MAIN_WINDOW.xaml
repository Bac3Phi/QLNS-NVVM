<Window x:Class="QLNS.MAIN_WINDOW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLNS"
        mc:Ignorable="d"
        
        Title="Quản Lý Nhà Sách" Height="450" Width="800" ResizeMode="NoResize" Icon="pack://siteoforigin:,,,/Resources/icons8_Booking.ico">
    <Window.Background>
        <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/wallpaper_book_by_analaurasam-d6flgtf.bmp"/>
    </Window.Background>
    
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Menu">
                    <MenuItem Header="_Quản Lý Sách" Click="MenuItem_Click" />
                    <MenuItem Header="_Quản Lý Khách Hàng" Click="MenuItem_Click_1" />
                    <MenuItem Header="_Hóa Đơn Bán Sách" Click="MenuItem_Click_2" />
                    <Separator />
                    <MenuItem Header="_Thoát" Click="MenuItem_Click_3" />
                </MenuItem>
 

            </Menu>
            <TextBox AcceptsReturn="True" >
                <TextBox.Background>
                    <ImageBrush/>
                </TextBox.Background>
            </TextBox>
        </DockPanel>


    </Grid>
</Window>
